<div class="container">
    <div class="my-3">
        <h6 class="lead" style="position: absolute; left: 100px;">
            <i class="fa fa-filter text-secondary"></i>
            Filters
        </h6>
    </div>
    <div class="my-2">
        <form method="get" asp-action="Index">
            <input type="hidden" name="categoryId" value="@(Context.Request.Query["categoryId"])" />
            <div style="position: absolute; left: 95px; top: 290px; width: 275px;">
                <div class="form-group my-2">
                    <input class="form-control" name="SearchTerm" placeholder="Search" />
                </div>
                <div class="form-group my-2">
                    <input class="form-control" name="MinPrice" placeholder="Minimum Price" />
                </div>
                <div class="form-group my-2">
                    <input class="form-control" name="MaxPrice" placeholder="Maximum Price" />
                </div>
                <div class="from-group">
                    <button type="submit" class="btn btn-sm btn-primary rounded-0"
                        style="width: 100px; margin-top: 10px; height:40px;">Filter</button>
                </div>
            </div>

        </form>
    </div>
</div>