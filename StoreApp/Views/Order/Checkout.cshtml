@model Order

@{
    Layout="_LayoutCheckout";
}

<div class="text-danger" asp-validation-summary="All"></div>

<form method="post" asp-action="Checkout">
    <div class="form-group my-5">
        <label asp-for="Name" style="margin-bottom: 10px;">Name</label>
        <input class="form-control" asp-for="Name">
    </div>

    <div class="form-group my-5">
        <label asp-for="Email" style="margin-bottom: 10px;">Email</label>
        <input class="form-control" asp-for="Email">
    </div>

    <div class="form-group my-5">
        <label asp-for="Line1" style="margin-bottom: 10px;"></label>
        <input class="form-control" asp-for="Line1">
    </div>

    <div class="form-group my-5">
        <label asp-for="Line2" style="margin-bottom: 10px;"></label>
        <input class="form-control" asp-for="Line2">
    </div>

    <div class="form-group my-5">
        <label asp-for="Line3" style="margin-bottom: 10px;"></label>
        <input class="form-control" asp-for="Line3">
    </div>

    <div class="form-group my-5">
        <label asp-for="City" style="margin-bottom: 10px;"></label>
        <input class="form-control" asp-for="City">
    </div>

    <div class="form-group my-5">
        <input asp-for="GiftWrap">
        <label style="margin-bottom: 10px;">Gift wrap these items<label>
    </div>
    <div class=" text-center">
        <button type="submit" class="btn btn-primary">Complete Order</button>
    </div>
</form>