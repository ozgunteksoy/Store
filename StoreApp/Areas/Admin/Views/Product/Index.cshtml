@model IEnumerable<Product>

<div class="text-center">
    <div class="display-6">Products</div>

    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="Create"><i class="fa-solid fa-square-plus"></i> Create</a>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product prd in Model)
            {
                <tr>
                    <td>@prd.ProductId</td>
                    <td>@prd.ProductName</td>
                    <td>@prd.Price</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@prd.ProductId"><i
                                    class="fa-solid fa-pen-to-square"></i> Edit</a>
                            <a class="btn btn-info" asp-area="" asp-controller="Product" target="_blank" asp-action="Get"
                                asp-route-id="@prd.ProductId" style="margin: 0 0 0 3px;"><i
                                    class="fa-solid fa-magnifying-glass"></i> Search</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@prd.ProductId" style="margin: 0 0 0 3px;"><i class="fa-solid fa-trash"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
