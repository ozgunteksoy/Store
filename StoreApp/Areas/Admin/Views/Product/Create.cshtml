@model ProductDtoForInsertion

<div class="text-center">
    <div class="display-6">Create</div>
</div>

<form method="post" asp-action="Create">

    <div class="text-danger" asp-validation-summary="All"></div>

    <div class="form-group my-3">
        <label asp-for="CategoryId"></label>
        <select class="form-control" asp-items="@ViewBag.Categories" asp-for="CategoryId" >
        </select>
    </div>

    <div class="form-group my-3">
        <label asp-for="ProductName" style="margin: 0 0 5px 3px;"></label>
        <input class="form-control" asp-for="ProductName">
    </div>
    <div class="form-group my-3">
        <label asp-for="Price" style="margin: 10px 0 5px 3px;"></label>
        <input class="form-control" asp-for="Price">
    </div>
    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit" style="margin: 10px 0 0 0"><i
                    class="fa-solid fa-floppy-disk"></i> Save</button>
            <a asp-action="Index" type="button" style="margin: 10px 0 0 10px" class="btn btn-primary"><i
                    class="fa-solid fa-list"></i> Product</a>
        </div>
    </div>
</form>